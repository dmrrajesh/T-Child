<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FrameLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/drawer_menu_item_icon_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#F12"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/ic_menu_gallery"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/drawer_menu_item_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_toRightOf="@+id/drawer_menu_item_icon_1"
                android:text="RAJESH"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/drawer_menu_item_mobile_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/drawer_menu_item_title_1"
                android:layout_toRightOf="@+id/drawer_menu_item_icon_1"
                android:text="1234567890"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:id="@+id/view" />
        <Button
            android:id="@+id/request_reject"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="Reject"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_toRightOf="@+id/view"
            android:layout_toEndOf="@+id/view" />
        <Button
            android:id="@+id/request_confirm"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:background="@color/green"
            android:layout_toLeftOf="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>
