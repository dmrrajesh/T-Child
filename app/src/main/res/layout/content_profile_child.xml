<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rajeshsaini.dmr.demo.activity.Profile"
    tools:showIn="@layout/activity_profile_child">
    <android.support.v7.widget.CardView
        android:id="@+id/user_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/user_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@color/colorPrimary"
            android:src="@mipmap/ic_account_box_white_48dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/user_name"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/user_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitXY"
                    android:layout_margin="2dp"
                    android:background="@color/colorPrimary"
                    android:src="@mipmap/ic_contact_mail_white_48dp"
                    />
                <TextView
                    android:id="@+id/email1"
                    android:layout_toRightOf="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RSAINI.JAVA@GMAIL.COM"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
                <ImageView
                    android:id="@+id/edit1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:src="@mipmap/ic_create_white_48dp"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/email1"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:scaleType="fitXY"
                    android:layout_margin="2dp"
                    android:background="@color/colorPrimary"
                    android:src="@mipmap/ic_contact_mail_white_48dp"
                    />
                <TextView
                    android:id="@+id/email2"
                    android:layout_toRightOf="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RSAINI.JAVA@GMAIL.COM"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />
                <ImageView
                    android:id="@+id/edit2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:src="@mipmap/ic_create_white_48dp"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/email2"
                    />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
